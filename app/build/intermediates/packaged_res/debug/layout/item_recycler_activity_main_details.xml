<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_margin="10dp"
    android:background="#F1F1F2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgItemRecyclerMainActivityDetailsImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtItemRecyclerMainActivityDetailsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Ahmad"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/imgItemRecyclerMainActivityDetailsImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtItemRecyclerMainActivityDetailsBarcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:text="#Invoice1234"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgItemRecyclerMainActivityDetailsImage"
            app:layout_constraintTop_toBottomOf="@+id/txtItemRecyclerMainActivityDetailsName" />

        <TextView
            android:id="@+id/txtItemRecyclerMainActivityDetailsTotalMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="4440$"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtItemRecyclerMainActivityDetailsState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28 july 2020"
            android:textAlignment="center"
            android:textColor="@color/green2"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/green1"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtItemRecyclerMainActivityDetailsTotalMoney" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>